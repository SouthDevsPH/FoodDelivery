@FoodDelivery.API_HostAddress = https://localhost:7113
@accessToken = paste_your_token_here
@refreshToken = paste_refresh_token_here

###############################################################################
# Authentication Endpoints (Public - No Authorization Required)
###############################################################################

### Register - Create New User
POST {{FoodDelivery.API_HostAddress}}/api/auth/register
Content-Type: application/json

{
  "username": "admin",
  "password": "admin",
  "email": "admin@fooddelivery.com",
  "role": "Admin"
}

### Login - Get Access Token
POST {{FoodDelivery.API_HostAddress}}/api/auth/login
Content-Type: application/json

{
  "username": "admin",
  "password": "admin"
}

### Validate Token
POST {{FoodDelivery.API_HostAddress}}/api/auth/validate
Authorization: Bearer {{accessToken}}

### Refresh Token
POST {{FoodDelivery.API_HostAddress}}/api/auth/refresh
Content-Type: application/json

{
  "refreshToken": "{{refreshToken}}"
}

### Logout
POST {{FoodDelivery.API_HostAddress}}/api/auth/logout
Content-Type: application/json

{
  "refreshToken": "{{refreshToken}}"
}

###############################################################################
# Users Endpoints (Protected - Requires Authorization)
###############################################################################

### Get All Users
GET {{FoodDelivery.API_HostAddress}}/api/users
Authorization: Bearer {{accessToken}}

### Get User by ID
GET {{FoodDelivery.API_HostAddress}}/api/users/1
Authorization: Bearer {{accessToken}}

### Create User
POST {{FoodDelivery.API_HostAddress}}/api/users
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "username": "admin",
  "password": "admin",
  "email": "admin@fooddelivery.com",
  "role": "Admin"
}

### Update User
PUT {{FoodDelivery.API_HostAddress}}/api/users/1
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "userId": 1,
  "username": "admin",
  "passwordHash": "$2a$11$hash_here",
  "email": "admin@fooddelivery.com",
  "role": "Admin"
}

### Delete User
DELETE {{FoodDelivery.API_HostAddress}}/api/users/1
Authorization: Bearer {{accessToken}}

